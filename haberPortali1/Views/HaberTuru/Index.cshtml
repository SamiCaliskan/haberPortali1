@model List<HaberTuru>

@if (TempData["basarili"] != null)
{
    <h2 style="color:red">@TempData["basarili"]</h2>
}


<div class="container">
    <div class="row pt-3 pb-4"
        <div>
            <h1>Haber Türleri</h1>
        </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Haber Türü
            </th>
            <th
            </th>
            <th>
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var haberTuru in Model)
        {
            <tr>
                <td>@haberTuru.Id</td>
                <td>@haberTuru.Ad</td>
                    <td>
                        <a asp-controller="HaberTuru" asp-action="Guncelle" asp-route-id="@haberTuru.Id" type="button " class="btn btn-success" style="width:250px">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="HaberTuru" asp-action="Sil" asp-route-id="@haberTuru.Id" type="button " class="btn btn-danger" style="width:250px">Sil</a>
                    </td>
            </tr>
        }
        
    </tbody>
</table>

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="HaberTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">
                Yeni Haber Türü Oluştur
            </a>
        </div>
    </div>

</div>