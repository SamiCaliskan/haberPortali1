@using haberPortali1.Utility
@model List<Haber>

@if (TempData["basarili"] != null)
{
    <h2 style="color:red">@TempData["basarili"]</h2>
}


<div class="container">
    <div class="row pt-3 pb-4" 
        <div>
            <h1>Haberler</h1>
        </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
                Id
            </th>
            <th>
                HaberAdi
            </th>
            <th>
                Tanim
            </th>
            <th>
                Yazar
            </th>
            <th>
                Deger 
            </th>
            <th>
                HaberTuru
            </th>
            <th
            </th>

            @if (User.IsInRole(UserRoles.Role_Admin))
                {
                    <th>
                    </th>
                    <th>
                    </th>
            }
        </tr>
    </thead>

    <tbody>
        @foreach(var haber in Model)
        {
            <tr>
                    <td align="center" valign="middle">
                    <img src="@haber.ResimUrl" style="border-radius:7px; 1px solid #bbb9b9;
                        max-height: 300px; max-width:300px" />
                    </td>

                    <td align="center" valign="middle">@haber.Id</td>
                    <td align="center" valign="middle">@haber.HaberAdi</td>
                    <td align="center" valign="middle">@haber.Tanim</td>
                    <td align="center" valign="middle">@haber.Yazar</td>
                    <td align="center" valign="middle">@haber.Deger</td>
                    <td align="center" valign="middle">@haber.HaberTuru.Ad</td>

                 @if (User.IsInRole(UserRoles.Role_Admin))
                 {
                        <td align="center" valign="middle">
                        <a asp-controller="Haber" asp-action="EkleGuncelle" asp-route-id="@haber.Id" type="button " class="btn btn-success" style="width:250px">Güncelle</a>
                    </td>
                        <td align="center" valign="middle">
                        <a asp-controller="Haber" asp-action="Sil" asp-route-id="@haber.Id" type="button " class="btn btn-danger" style="width:250px">Sil</a>
                    </td>
                 }
            </tr>
        }
        
    </tbody>
</table>
     @if (User.IsInRole(UserRoles.Role_Admin))
     { 
    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="Haber" asp-action="EkleGuncelle" class="btn btn-lg btn-primary" type="button">
                Yeni Haber Oluştur
            </a>
        </div>
    </div>
     }

</div>